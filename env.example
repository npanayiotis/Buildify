# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL Database URL
DATABASE_URL="postgresql://username:password@localhost:5432/elevare_saas"

# ========================================
# AUTHENTICATION
# ========================================

# JWT Secret Key (generate a strong secret)
JWT_SECRET="your-super-secret-jwt-key-here"

# JWT Expiration Time
JWT_EXPIRES_IN="7d"

# ========================================
# HOSTING & DEPLOYMENT
# ========================================

# Vercel Configuration
VERCEL_TOKEN="your-vercel-token"
VERCEL_PROJECT_ID="your-vercel-project-id"
VERCEL_TEAM_ID="your-vercel-team-id"

# ========================================
# DOMAIN & DNS
# ========================================

# Main Domain
MAIN_DOMAIN="elevare.com"

# Subdomain Base
SUBDOMAIN_BASE="elevare.com"

# ========================================
# PAYMENT PROCESSING
# ========================================

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ========================================
# EMAIL SERVICE
# ========================================

# SendGrid Configuration
SENDGRID_API_KEY="SG.your-sendgrid-api-key"

# Email Templates
FROM_EMAIL="noreply@elevare.com"
FROM_NAME="Elevare Platform"

# ========================================
# FILE STORAGE
# ========================================

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# AWS S3 (Alternative to Cloudinary)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket"

# ========================================
# ANALYTICS
# ========================================

# Google Analytics
GOOGLE_ANALYTICS_ID="GA-..."

# Facebook Pixel
FACEBOOK_PIXEL_ID="your-facebook-pixel-id"

# ========================================
# SECURITY
# ========================================

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,https://elevare.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# ========================================
# MONITORING & LOGGING
# ========================================

# Sentry (Error Tracking)
SENTRY_DSN="your-sentry-dsn"

# Log Level
LOG_LEVEL="info"

# ========================================
# FEATURE FLAGS
# ========================================

# Enable/Disable Features
ENABLE_CUSTOM_DOMAINS="true"
ENABLE_ANALYTICS="true"
ENABLE_PAYMENTS="true"
ENABLE_EMAIL_NOTIFICATIONS="true"

# ========================================
# DEVELOPMENT
# ========================================

# Environment
NODE_ENV="development"

# Debug Mode
DEBUG="false"

# ========================================
# WEBHOOKS
# ========================================

# Stripe Webhook Endpoint
STRIPE_WEBHOOK_ENDPOINT="/api/webhooks/stripe"

# Vercel Webhook Endpoint
VERCEL_WEBHOOK_ENDPOINT="/api/webhooks/vercel"

# ========================================
# PLANS & PRICING
# ========================================

# Free Plan Limits
FREE_PLAN_WEBSITES="1"
FREE_PLAN_STORAGE_MB="100"
FREE_PLAN_BANDWIDTH_GB="1"

# Pro Plan Limits
PRO_PLAN_WEBSITES="5"
PRO_PLAN_STORAGE_MB="1000"
PRO_PLAN_BANDWIDTH_GB="10"

# Enterprise Plan Limits
ENTERPRISE_PLAN_WEBSITES="-1"
ENTERPRISE_PLAN_STORAGE_MB="10000"
ENTERPRISE_PLAN_BANDWIDTH_GB="100"

# ========================================
# CUSTOMIZATION
# ========================================

# Default Theme Colors
PRIMARY_COLOR="#667eea"
SECONDARY_COLOR="#764ba2"
SUCCESS_COLOR="#10b981"
WARNING_COLOR="#f59e0b"
ERROR_COLOR="#ef4444"

# Default Fonts
PRIMARY_FONT="Inter"
SECONDARY_FONT="system-ui"

# ========================================
# BACKUP & RECOVERY
# ========================================

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"
BACKUP_STORAGE_PROVIDER="s3"

# ========================================
# PERFORMANCE
# ========================================

# Cache Configuration
CACHE_TTL_SECONDS="3600"
CACHE_MAX_SIZE_MB="100"

# CDN Configuration
CDN_URL="https://cdn.elevare.com"

# ========================================
# COMPLIANCE
# ========================================

# GDPR Compliance
GDPR_ENABLED="true"
DATA_RETENTION_DAYS="365"

# Terms of Service
TERMS_OF_SERVICE_URL="https://elevare.com/terms"
PRIVACY_POLICY_URL="https://elevare.com/privacy"
